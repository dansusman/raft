    #     # You definitely want to remove this from your implementation
    #     msg = {'src': my_id, 'dst': random.choice(
    #         replica_ids), 'leader': 'FFFF', 'type': 'noop'}
    #     sock.send(json.dumps(msg))
    #     print(f'%s received a NOOP from %s', msg['src'], msg['dst'])
    #     last = clock
